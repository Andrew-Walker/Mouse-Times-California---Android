<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp"
    tools:context="com.andrewnwalker.mousetimes_california.ParkSelect">

    <TextView
        android:id="@+id/parkSelect_titleTextView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/chooseParkText"
        android:textColor="#FF2F92"
        android:textSize="21sp" />

    <TextView
        android:id="@+id/parkSelect_titleTextView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:onClick="openPark"
        android:paddingBottom="5dp"
        android:text="@string/chooseParkSubText"
        android:textColor="#7F7F7F"
        android:textSize="17sp" />

    <LinearLayout
        android:id="@+id/parkSelect_disneylandParkButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:background="@drawable/dp1"
        android:orientation="vertical"
        android:scaleType="centerCrop">

        <TextView
            android:id="@+id/parkSelect_disneylandParkButtonTop"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:gravity="center|bottom"
            android:onClick="openPark"
            android:paddingBottom="7dp"
            android:text="@string/disneylandParkName"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/parkSelect_disneylandParkButtonBottom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:gravity="center|top"
            android:lineSpacingExtra="4dp"
            android:onClick="openPark"
            android:paddingTop="7dp"
            android:text="@string/disneylandParkAddress"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/parkSelect_californiaAdventureButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/ca1"
        android:orientation="vertical"
        android:scaleType="centerCrop">

        <TextView
            android:id="@+id/parkSelect_californiaAdventureButtonTop"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:gravity="center|bottom"
            android:onClick="openPark"
            android:paddingBottom="7dp"
            android:text="@string/californiaAdventureName"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/parkSelect_californiaAdventureButtonBottom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:gravity="center|top"
            android:lineSpacingExtra="4dp"
            android:onClick="openPark"
            android:paddingTop="7dp"
            android:text="@string/californiaAdventureAddress"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>
