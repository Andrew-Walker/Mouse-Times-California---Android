<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:paddingBottom="4dp"
    android:paddingTop="4dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:id="@+id/rel_layout"
    android:background="#EEE">

    <RelativeLayout android:orientation="horizontal" android:layout_height="match_parent" android:layout_width="match_parent" android:background="@drawable/attraction_row_container">
        <ImageView
            android:id="@+id/attractionImageView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="false"
            android:background="@drawable/attraction_image_container"
            android:contentDescription="Attraction Image"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/fastPassImageView"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp" android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/fast_pass"
            android:contentDescription="FastPass Availability"/>

        <TextView
            android:id="@+id/waitTimeTextView"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
            android:text="0m"
            android:layout_margin="6dp"
            android:gravity="center"
            android:background="@drawable/color0"
            android:textColor="#FFFFFF"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/attractionImageView" android:layout_toEndOf="@+id/attractionImageView"
            android:layout_toLeftOf="@+id/waitTimeTextView" android:layout_toStartOf="@+id/waitTimeTextView"
            android:orientation="vertical">

            <TextView
                android:id="@+id/attractionNameTextView"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginLeft="5dp" android:layout_marginStart="5dp"
                android:text="Attraction Name"
                android:textColor="#333333"
                android:gravity="center_vertical"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/updatedImageView"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp" android:layout_marginStart="5dp"
                    android:layout_marginRight="5dp" android:layout_marginEnd="5dp"
                    android:background="@drawable/updated"
                    android:contentDescription="Last Updated Image"/>

                <TextView
                    android:id="@+id/updatedTextView"
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:gravity="center_vertical"
                    android:text="Last Updated"
                    android:textColor="#7F7F7F" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>