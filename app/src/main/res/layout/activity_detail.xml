<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.andrewnwalker.mousetimes_california.DetailActivity">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:id="@+id/headerImageView"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" android:layout_alignParentLeft="true"
                android:scaleType="centerCrop"
                android:adjustViewBounds="false" />

            <Button
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:layout_alignBottom="@id/headerImageView"
                android:layout_alignRight="@id/headerImageView"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:id="@+id/starButton"
                android:background="@drawable/star" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/headerImageView"
                android:orientation="horizontal"
                android:layout_marginTop="-30dp"
                android:layout_marginBottom="16dp"
                android:id="@+id/main_details_layout">

                <TextView
                    android:id="@+id/waitTimeTextView"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:text="0m"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="16dp"
                    android:gravity="center"
                    android:background="@drawable/color0"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:singleLine="true"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:text="Attraction Name"
                        android:textColor="#333333"
                        android:textSize="23sp"
                        android:layout_marginRight="8dp"
                        android:gravity="bottom"
                        android:singleLine="true"
                        android:id="@+id/attractionNameTextView"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Last Updated"
                        android:textColor="#7F7F7F"
                        android:textSize="16sp"
                        android:layout_marginRight="8dp"
                        android:gravity="bottom"
                        android:id="@+id/updatedTextView"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/main_details_layout"
                android:text="How long did you wait?"
                android:textSize="17sp"
                android:textColor="#333333"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:id="@+id/howLongLabel"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/waitTimesRecyclerView"
                android:layout_below="@id/howLongLabel"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:scrollbars="none"
                android:overScrollMode="never"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/waitTimesRecyclerView"
                android:text="Calculate your wait time"
                android:textSize="17sp"
                android:textColor="#333333"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:id="@+id/calculateTextView"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_below="@id/calculateTextView"
                android:orientation="horizontal"
                android:gravity="center"
                android:id="@+id/timerLayout">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:text="00:00:00"
                    android:textColor="#FF9400"
                    android:gravity="center"
                    android:layout_marginRight="8dp"
                    android:id="@+id/timerTextView"
                    android:textSize="18sp"
                    android:background="@drawable/timer_container"/>

                <Button
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:textAllCaps="false"
                    android:text="Start Timer"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/timer_button_container"
                    android:layout_marginLeft="8dp"
                    android:textSize="15sp"
                    android:id="@+id/startTimer"
                    style="?android:attr/borderlessButtonStyle" />

                <Button
                    android:layout_width="39dp"
                    android:layout_height="match_parent"
                    android:text="╳"
                    android:textSize="28sp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/end_timer_container"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="16dp"
                    android:id="@+id/endTimer"
                    android:visibility="gone"
                    style="?android:attr/borderlessButtonStyle"/>

                <Button
                    android:layout_width="39dp"
                    android:layout_height="match_parent"
                    android:text="✓"
                    android:textSize="28sp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/confirm_timer_container"
                    android:layout_marginLeft="16dp"
                    android:id="@+id/confirmTimer"
                    android:visibility="gone"
                    style="?android:attr/borderlessButtonStyle"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_below="@id/timerLayout"
                android:text="About the attraction"
                android:textSize="17sp"
                android:textColor="#333333"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:id="@+id/aboutTextView"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/aboutTextView"
                android:text="Space Mountain is the name of a space-themed indoor roller coaster attraction located at all five Magic Kingdom-style Disney Parks. Although all five versions of the attraction are different in nature, all have a similar domed exterior façade that is a landmark for the respective park. The first Space Mountain ride opened in 1975 at Walt Disney World Resort in Florida, and similar attractions were then eventually built at the other Disney parks."
                android:textSize="15sp"
                android:textColor="#7F7F7F"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:id="@+id/descriptionTextView" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_below="@id/descriptionTextView"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:id="@+id/iconLayout">
            </LinearLayout>

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.MapFragment"
                android:layout_width="match_parent"
                android:layout_height="258dp"
                android:layout_below="@id/iconLayout"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
